
#startButton {
    border: none; 
    /* 0 0 0 0 = keine 9-Slice-Ränder; 'stretch stretch' = strecken statt kacheln */
    border-image: url(":/assets/start_NORMAL.png") 0 0 0 0 stretch stretch;
    min-width: 96px;     /* anpassen: deine gewünschte Standardgröße */
    min-height: 96px;
}

#startButton:hover {
    border-image: url(":/assets/start_HOVER.png") 0 0 0 0 stretch stretch;
}

#startButton:pressed {
    border-image: url(":/assets/start_NORMAL.png") 0 0 0 0 stretch stretch;
}
